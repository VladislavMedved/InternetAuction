@model MvcPL.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
    <h2>Use an existing account to log in</h2>
    <br />
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        <div class="form-horizontal">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group" style="max-width:360px;">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Your name" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group" style="max-width:360px;">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Your Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group form-inline">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
            </div>
            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Login" />
            </div>
            <div class="form-group">
                @Html.ActionLink("Register", "Register") if you don't have an account
            </div>
        </div>
    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
